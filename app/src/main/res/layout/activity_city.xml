<?xml version="1.0" encoding="utf-8"?>
<com.dwg.egou.SlideFinishLayout
    android:id="@+id/root_layout"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dwg.egou.cityActivity">

    <LinearLayout
        android:background="@color/mainColor"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/cityForBack"
            android:text="@string/cityForBack"
            android:gravity="center"
            android:textSize="13pt"
            android:layout_width="120dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/cityLists"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </ListView>
        <com.dwg.egou.siderBar
            android:id="@+id/siderBar"
            android:layout_alignRight="@+id/cityLists"
            android:layout_width="45dp"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>
</com.dwg.egou.SlideFinishLayout>